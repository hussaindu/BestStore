@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> userManager;

@{
    var appUser = await userManager.GetUserAsync(User);

    string userRole = "";
    if (User.IsInRole("admin")) userRole = "Admin";
    if (User.IsInRole("seller")) userRole = "Seller";
    if (User.IsInRole("cleint")) userRole = "Cleint";



}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="mb-3">Profile</h2>
        <hr />

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">First Name</div>
            <div class="col-sm-8">@appUser?.FirstName</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Last Name</div>
            <div class="col-sm-8">@appUser?.LastName</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Email</div>
            <div class="col-sm-8">@appUser?.Email</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Phone Number</div>
            <div class="col-sm-8">@appUser?.PhoneNumber</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Address</div>
            <div class="col-sm-8">@appUser?.Address</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Role</div>
            <div class="col-sm-8">@userRole</div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Created At</div>
            <div class="col-sm-8">@appUser?.CreateAt</div>
        </div>

        <hr />

        <div>
           
            <a class="btn btn-warning btn-sm" asp-controller="Store" asp-action="Index">Back</a>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="EditProfileModal" tabindex="-1"  aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" >Edit Profile</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
