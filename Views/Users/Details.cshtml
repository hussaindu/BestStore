@model ApplicationUser
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{

}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border">
        <h2 class="text-center mb-3">User Details</h2>
        <hr />


        <div class="row mb-2">
            <div class="col-sm-4">First Name</div>
            <div class="col-sm-8">@Model.FirstName</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">LastName</div>
            <div class="col-sm-8">@Model.LastName</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Email</div>
            <div class="col-sm-8">@Model.Email</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Address</div>
            <div class="col-sm-8">@Model.Address</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">PhoneNumber</div>
            <div class="col-sm-8">@Model.PhoneNumber</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">Role</div>
            <div class="col-sm-8">

                @{
                    var roles = ViewBag.Roles;
                    var rolesStr = String.Join(",", roles);

                    string color = "bg-secondary";
                    if (roles.Contains("admin"))
                    {
                        color = "bg-danger";
                    }
                    else if (roles.Contains("seller"))
                    {
                        color = "bg-warning text-dark";
                    }
                    else if (roles.Contains("cleint"))
                    {
                        color = "bg-info text-dark";
                    }


                    <span class="badge rounded-pill @color">@rolesStr</span>

                }
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4">CreateAt</div>
            <div class="col-sm-8">@Model.CreateAt</div>
        </div>

        <hr />
        <div>
            <a class="btn btn-primary" asp-controller="Users" asp-action="Index">Back</a>

          @*   <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button> *@
        </div>
    </div>
</div>

<div class="modal fade" id="#deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" ">Delete User Account</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                 <p>Are you sure you want to delete this user acccount?</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger" 
                    role="button" 
                    asp-controller="Users"
                    asp-action="DeleteAccount"
                    asp-route-id="@Model.Id"
                >
                Delete
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
               
            </div>
        </div>
    </div>
</div>